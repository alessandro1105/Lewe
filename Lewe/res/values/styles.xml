<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    
    <!-- CUSTOM STYLE -->
    
    <!-- tema per il custom title -->
    <style name="WindowCustomTitle">   
        <item name="android:background">@drawable/custom_title_background</item> 
        <item name="android:padding">0px</item>    
    </style>
    
    <style name="CustomTitleTheme" parent="@android:style/Theme.Light">
    	<item name="android:windowTitleSize">50dp</item>
    	<item name="android:windowTitleBackgroundStyle">@style/WindowCustomTitle</item>
    </style>
    
    <!-- cutom title preferences label -->
    <style name="WindowCustomTitleLabel" parent="@android:style/Theme.Light">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
		<item name="android:textSize">20sp</item>
    </style>
    
    
    <!-- tema categorie preferenze -->
    <style name="PreferencesCategoryStyle">
		<item name="android:background">@drawable/textview_category_background</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">25dip</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">5sp</item>
	</style>
	
    <!-- tema categorie preferenze -->
    <style name="PreferencesTextStyle">
		<item name="android:background">@null</item>
		<item name="android:textColor">#000000</item>
		<item name="android:layout_height">25dip</item>
		<item name="android:textSize">22sp</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:paddingLeft">5sp</item>
	</style>
	
    
    <!-- FINE CUSTOM STYLE -->
    
    
    
    <!-- ACTIVITY STYLE -->
    
    <!-- tema della home --> 
    <style name="MainActivityTheme" parent="@style/CustomTitleTheme">
    </style>
    
    
    <!-- tema preferences activity main -->
    <style name="PreferencesMainActivityTheme" parent="@style/CustomTitleTheme">     
    </style>
    
    
    <!-- tema preferences activity webcloud -->
    <style name="PreferencesWebCloudActivityTheme" parent="@style/CustomTitleTheme">
        <item name="android:listSeparatorTextViewStyle">@style/PreferencesCategoryStyle</item>  
        
    </style>
    
    
    <!-- tema preferences activity lewe -->    
    <style name="PreferencesLeweActivityTheme" parent="@style/CustomTitleTheme">     
    </style>
    
    
    <!-- tema chart activity lewe -->    
    <style name="ChartActivityTheme" parent="@style/CustomTitleTheme">    
        
    </style>
    
    <!-- FINE ACTIVITY STYLE -->
    
  
   
	
    
    
</resources>