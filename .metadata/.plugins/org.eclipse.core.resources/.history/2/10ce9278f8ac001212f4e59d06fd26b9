package com.lewe.app;

import android.app.Service;
import android.content.BroadcastReceiver;
import android.content.Context;
import android.content.Intent;
import android.content.IntentFilter;
import android.os.IBinder;
import android.util.Log;


public class LeweBluetoothService extends Service {
	
	public static final boolean DEBUG = true;
	
	public static final String INTENT_FILTER = "com.lewe.app.LeweBluetoothService";
	
	Jack message;
	BluetoothSerialService mmJTM;
	
	BroadcastReceiver receiver; //broadcast receiver
	IntentFilter filter; //filtro broadcast receiver
	
	public static boolean started = false;
	
	@Override
	public IBinder onBind(Intent arg0) {
		// TODO Auto-generated method stub
		return null;
	}
	
	
	@Override
	public void onCreate() {
		
		if (DEBUG) Log.d("LBS", "creazione...");
		
		
		filter = new IntentFilter(INTENT_FILTER); //creo il filtro per gli intent
		
		receiver = new BroadcastReceiver() {

			@Override
			public void onReceive(Context context, Intent intent) {
				
				//cosa fare alla ricezione dell'intent
				
				
				
			}
        	
        };
		
        
        registerReceiver(receiver, filter); //registro il receiver collegato all'intent filter
		
		
		if (DEBUG) Log.d("LBS", "creato");
		
		
		started = true; //indico che il servizio è partito
	}

	@Override
	public void onDestroy() {
		
		if (DEBUG) Log.d("LBS", "distruzione...");
		
		
		unregisterReceiver(receiver); //scollego il broadcast receiver
		
		if (DEBUG) Log.d("LBS", "stop message");
		message.stop(); //stoppo la classe message
		
		
		if (DEBUG) Log.d("LBS", "stop mmJTM");
		mmJTM.stop(); //stoppo mmJTM
		
		
		
		if (DEBUG) Log.d("LBS", "distrutto");
		
		started = false; //indico che il servizio non è attivo
	}
	
	
	public int onStartCommand(Intent intent, int flags, int startId) {
		
		if (DEBUG) Log.d("LBS", "executing...");
		
		
		
		if (DEBUG) Log.d("LBS", "executed");
		
		
		
		return Service.START_STICKY;
	}
	

}