	@Override
	public void onDestroy() {
		
		//t.disconnect();
		
		//t = null;
		
		Jack message = new Jack(null) {

			@Override
			public void onReceive(JData message) {
				
				sendBroadcastIntent((String) message.get("key"));
				
			}
			
		};
		
		message.start();
		
		Log.d("service", "distrutto");
		
	}
	
	
	@Override
