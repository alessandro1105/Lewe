package com.lewe.app;

import android.app.Service;
import android.content.BroadcastReceiver;
import android.content.Intent;
import android.content.IntentFilter;
import android.os.IBinder;
import android.util.Log;


public class LeweService extends Service {
	
	public static final boolean DEBUG = true;
	
	public static final String INTENT_FILTER = "com.lewe.app.LeweBluetoothService"; //valore del filtro intent
	
	
	
	BroadcastReceiver receiver; //broadcast receiver
	IntentFilter filter; //filtro broadcast receiver
	
	public static boolean started = false;
	
	@Override
	public IBinder onBind(Intent arg0) {
		// TODO Auto-generated method stub
		return null;
	}
	
	
	@Override
	public void onCreate() {
		
		if (DEBUG) Log.d("LS", "creazione...");
		
		
		
		
		
		
		if (DEBUG) Log.d("LS", "creato");
		
		
		started = true; //indico che il servizio è partito
	}

	@Override
	public void onDestroy() {
		
		if (DEBUG) Log.d("LS", "distruzione...");
		
		
		
		if (DEBUG) Log.d("LS", "distrutto");
		
		started = false; //indico che il servizio non è attivo
	}
	
	
	public int onStartCommand(Intent intent, int flags, int startId) {
		
		if (DEBUG) Log.d("LS", "executing...");
		
		
		
		if (DEBUG) Log.d("LS", "executed");
		
		
		
		return Service.START_STICKY;
	}
	

}
